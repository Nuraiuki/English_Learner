<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="english.PreviousAttempts"
             Title="Previous Attempts">
   
    <StackLayout>
        <Label Text="All Quiz Scores" HorizontalOptions="Center" FontSize="Large" Margin="0,20,0,10" />

        <!-- ListView для отображения предыдущих попыток -->
        <ListView x:Name="previousAttemptsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="10" >
                            <!-- Данные о попытке -->
                            <Label Text="{Binding Results}" FontSize="Medium" />
                            <Label Text="{Binding Timedate}" FontSize="Small" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
