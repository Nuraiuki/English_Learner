<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="english.LoginPage"
             Title="LoginPage">
  
  <StackLayout>
        <Entry x:Name="usernameEntry" Placeholder="Username" Margin="0,10,0,0" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" Margin="0,10,0,10" />
        <Button Text="Login" Clicked="OnLoginButtonClicked" />
    </StackLayout>  
</ContentPage>

