<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="english.RegistrationPage"
             Title="RegistrationPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry x:Name="usernameEntry" Placeholder="Username" Margin="0,0,0,10" />
            <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" Margin="0,0,0,10" />
            <Entry x:Name="repeatPasswordEntry" Placeholder="Repeat Password" IsPassword="True" Margin="0,0,0,10" />
            <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" Margin="0,0,0,10" />
            <Button Text="Register" Clicked="OnRegisterButtonClicked" Margin="0,10,0,0" />

            <Label Text="Already have an account?" Margin="0,10,0,0" />
            <Button Text="Login" Clicked="OnLoginButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
