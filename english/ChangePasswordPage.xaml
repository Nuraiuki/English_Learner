<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="english.ChangePasswordPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
<Entry x:Name="usernameEntry" Placeholder="username" IsPassword="True" Margin="10" />

            <Entry x:Name="oldPasswordEntry" Placeholder="Old Password" IsPassword="True" Margin="10" />
            <Entry x:Name="newPasswordEntry" Placeholder="New Password" IsPassword="True" Margin="10" />

            <Button Text="OK" Clicked="OnOkButtonClicked" Margin="10" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
